<Window x:Class="lab05.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab05"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Columna Izquierda -->
        <StackPanel Grid.Column="2" Margin="10">
            <TextBlock Text="Menu" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <StackPanel Margin="5">
                <Button Content="Crear y Listar" Width="100" Margin="0,0,0,0" Click="Button_Crear"/>
                <Button Content="Actualizar y Listar" Width="100" Margin="0,10,0,0" Click="Button_Actualizar"/>
                <Button Content="Borrar y Listar" Width="100" Margin="0,10,0,0" Click="Button_Borrar"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
